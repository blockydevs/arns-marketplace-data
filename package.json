{
  "name": "@blockydevs/arns-marketplace-data",
  "version": "0.2.0",
  "description": "Data and utility library for interacting with the ArNS Marketplace, including hooks, contexts, data-fetching logic, and formatting utilities.",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "BlockyDevs",
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "pnpm typecheck && tsup",
    "test": "vitest run",
    "lint": "eslint .",
    "typecheck": "tsc --build --noEmit",
    "commitlint": "commitlint",
    "changeset:add": "changeset add",
    "changeset:version": "changeset version",
    "changeset:publish": "pnpm build && changeset publish",
    "quickrelease": "pnpm build && changeset add && changeset version && changeset publish"
  },
  "peerDependencies": {
    "@ar.io/sdk": "^3.18.1",
    "arweave-graphql": "^0.0.5",
    "bignumber.js": "^9.3.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.32.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.5.1",
    "@types/node": "^24.2.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unicorn": "^60.0.0",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0",
    "vitest": "^3.2.4"
  }
}
